{
  "name": "react-typescript-rtk-boiler-plate",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint '*/**/*.{js,ts,tsx}'",
    "lint:fix": "eslint '*/**/*.{js,ts,tsx}' --quiet --fix",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,scss,json,md}\"",
    "pc": "npm run lint --fix && npm run format",
    "prepare": "husky install"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^2.2.2",
    "@types/node": "^20.11.30",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-redux": "^9.1.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@typescript-eslint/eslint-plugin": "^7.4.0",
    "@typescript-eslint/parser": "^7.4.0",
    "@vitejs/plugin-react": "^4.2.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.34.1",
    "husky": "^8.0.0",
    "lint-staged": "^15.2.2",
    "prettier": "3.2.5",
    "typescript": "^5.2.2",
    "vite": "^5.2.0"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,scss,json,md}": "npm run format",
    "src/**/*.{js,jsx}": "npm run lint"
  }
}
